<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IrsyadulMuridC5" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bg_light</item>
        <item name="colorPrimaryVariant">@color/bg_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Set Status bar text color to Light -->
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="cardview">@color/cv_light</item>
        <item name="text_outcv">@color/text_bg</item>
        <item name="text_incv">@color/text_bg</item>
        <item name="text_hint">@color/txt_hint</item>
        
        
    </style>
    
    <style name="AllMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    
    <style name="AllMatchParent.CarView">
        <item name="android:layout_marginTop">13dp</item>
    </style>
    
    <style name="ParsialMatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ParsialMatchParent.BG">
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    
    <style name="AllWrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="AllWrapContent.OutCv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/text_outcv</item>
        <item name="android:textSize">19sp</item>
    </style>
    
    <style name="AllWrapContent.InCv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/text_incv</item>
    </style>
    
    <style name="AllWrapContent.InCv.Tv">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="AllWrapContent.InCv.Tv.Hasil">
        <item name="android:layout_alignParentRight">true</item>
    </style>
    
    
    <!-- style for custom hisab -->
    
    <style name="AllWrapContent.InCv.TvCustom">
        <item name="android:layout_marginTop">13dp</item>
        <item name="android:layout_marginLeft">27dp</item>
    </style>
    
    <style name="AllWrapContent.InCv.TvCustom.Hasil">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">27dp</item>
    </style>
    
</resources>